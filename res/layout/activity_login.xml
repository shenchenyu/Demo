<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <EditText
        style="@android:attr/textStyle"
        android:id="@+id/et_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ev_user"
        android:hint="@string/str_ev_user" />
    <EditText
        android:drawableLeft="@drawable/ev_pass"
        android:id="@+id/et_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/str_ev_pass" />
	<Button
	    	android:layout_margin="10dp"
	    	android:layout_gravity="center_horizontal"
	  	    android:background="@drawable/btn_bottom_bg"
        	android:text="@string/str_bt_regist"
        	android:id="@+id/login"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        />

</LinearLayout>