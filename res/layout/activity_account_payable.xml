<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".RegisterActivity" >
    <ScrollView 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:padding="5dp"
             >
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        >
		    <EditText
		        android:paddingLeft="70dip"
		        android:id="@+id/et_vendor"
		        android:layout_width="fill_parent"
		        android:layout_height="40dp" />
		
		     <TextView
		         android:id="@+id/tv_vendor"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_alignParentLeft="true"
		         android:layout_centerVertical="true"
		         android:layout_marginLeft="10dp"
		         android:text="供應商:"
		         android:textSize="16sp" />
		     <ImageButton 
		         android:layout_centerVertical="true"
		         android:id="@+id/ibtn_vendor_dropDown" 
		         android:layout_width="wrap_content" 
		         android:layout_height="wrap_content"
		       	 android:layout_alignRight="@+id/et_vendor" 
		         android:layout_marginRight="5.0dip" 
		         android:background="@drawable/dropdown_select" 
		         /> 
		        
		
			</RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        >
		    <EditText
		        android:paddingLeft="70dip"
		        android:id="@+id/et_invoice"
		        android:layout_width="fill_parent"
		        android:layout_height="40dp" />
		     <TextView
		         android:id="@+id/tv_invoice"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_alignParentLeft="true"
		         android:layout_centerVertical="true"
		         android:layout_marginLeft="10dp"
		         android:text="发票单 :"
		         android:textSize="16sp" />
			</RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        >
		    
			
		    <EditText
		        android:paddingLeft="82dip"
		        android:id="@+id/et_terms"
		        android:layout_width="fill_parent"
		        android:layout_height="40dp" />
		
		     <TextView
		         android:id="@+id/tv_pay_terms"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_alignParentLeft="true"
		         android:layout_centerVertical="true"
		         android:layout_marginLeft="10dp"
		         android:text="付款条件:"
		         android:textSize="16sp" />
		     <ImageButton 
		         android:layout_centerVertical="true"
		         android:id="@+id/ibtn__terms_dropDown" 
		         android:layout_width="wrap_content" 
		         android:layout_height="wrap_content"
		       	 android:layout_alignRight="@+id/et_terms" 
		         android:layout_marginRight="5.0dip" 
		         android:background="@drawable/dropdown_select" 
		         /> 
			</RelativeLayout>
		    
		    
		    
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        >
		    <EditText
		        android:paddingLeft="82dip"
		        android:id="@+id/et_invoice_date"
		        android:layout_width="fill_parent"
		        android:layout_height="40dp" />
		
		     <TextView
		         android:id="@+id/tv_invoice_date"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_alignParentLeft="true"
		         android:layout_centerVertical="true"
		         android:layout_marginLeft="10dp"
		         android:text="发票日期:"
		         android:textSize="16sp" />
		     <ImageButton 
		         android:layout_centerVertical="true"
		         android:id="@+id/ibtn__invoice_date" 
		         android:layout_width="wrap_content" 
		         android:layout_height="wrap_content"
		       	 android:layout_alignRight="@+id/et_invoice_date" 
		         android:layout_marginRight="5.0dip" 
		         android:background="@drawable/dropdown_select" 
		         /> 
			</RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        >
		    <EditText
		        android:paddingLeft="82dip"
		        android:id="@+id/et_due_date"
		        android:layout_width="fill_parent"
		        android:layout_height="40dp" />
		
		     <TextView
		         android:id="@+id/tv_due_date"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_alignParentLeft="true"
		         android:layout_centerVertical="true"
		         android:layout_marginLeft="10dp"
		         android:text="截止日期:"
		         android:textSize="16sp" />
		     <ImageButton 
		         android:layout_centerVertical="true"
		         android:id="@+id/ibtn__due_date" 
		         android:layout_width="wrap_content" 
		         android:layout_height="wrap_content"
		       	 android:layout_alignRight="@+id/et_due_date" 
		         android:layout_marginRight="5.0dip" 
		         android:background="@drawable/dropdown_select" 
		         /> 
			</RelativeLayout>
			
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        >
		    <EditText
		        android:paddingLeft="82dip"
		        android:id="@+id/et_bank_amount"
		        android:layout_width="fill_parent"
		        android:layout_height="40dp" />
		
		     <TextView
		         android:id="@+id/tv_bank_amount"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_alignParentLeft="true"
		         android:layout_centerVertical="true"
		         android:layout_marginLeft="10dp"
		         android:text="金額:"
		         android:textSize="16sp" />
		    
			</RelativeLayout>
			
		    
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        >
		    <EditText
		        android:paddingLeft="82dip"
		        android:id="@+id/et_bill_descipt"
		        android:layout_width="fill_parent"
		        android:lines="3"
		        android:layout_height="wrap_content" />
		
		     <TextView
		         android:id="@+id/tv_bill_descipt"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_alignParentLeft="true"
		         android:layout_centerVertical="true"
		         android:layout_marginLeft="10dp"
		         android:text="账单描述:"
		         android:textSize="16sp" />
		    
			</RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        >
		    <EditText
		        android:paddingLeft="82dip"
		        android:id="@+id/et_remark"
		        android:layout_width="fill_parent"
		        android:lines="3"
		        android:layout_height="wrap_content" />
		
		     <TextView
		         android:id="@+id/tv_remark"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_alignParentLeft="true"
		         android:layout_centerVertical="true"
		         android:layout_marginLeft="10dp"
		         android:text="备注信息:"
		         android:textSize="16sp" />
			</RelativeLayout>
			 
			<LinearLayout 
			    android:layout_marginTop="10dip"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <Button 
			        android:id="@+id/bt_sub_bill"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:text="@string/str_bt_submit"
			        />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>